<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Should I Eat This</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= recipe.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">25 mins</h4>
                    <h3><%= recipe.name %></h3>
                    <p><%= recipe.description %></p>
                    <p>1. <%= recipe.step1 %></p>
                    <p>2. <%= recipe.step2 %></p>
                    <p>3. <%= recipe.step3 %></p>
                    <p>4. <%= recipe.step4 %></p>
                    <p>5. <%= recipe.step5 %></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right"><a class="btn btn-info" href="/recipes/<%= recipe._id %>/comments/new">Add New Comment</a></div>
                <hr>
                <% recipe.comments.forEach((comment) => { %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author %></strong>
                            <span class="pull-right">2 hrs ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                <% }) %>                
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
